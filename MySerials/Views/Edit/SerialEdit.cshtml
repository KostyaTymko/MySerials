@model MySerials.Models.Serial
@{
    ViewBag.Title = "SerialEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Редактирование сериала:</h2>
<div>
    <h2>@Model.Serial_title</h2>

    @using (Html.BeginForm("SerialEdit", "Edit", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.Id)
        <p>
            @Html.LabelFor(m => m.Serial_title, "Название")
            @Html.EditorFor(m => m.Serial_title)
        </p>
        <p>
            @Html.LabelFor(m => m.SerialDescription, "Описание")
            @Html.EditorFor(m => m.SerialDescription)
        </p>
        <p>
            @Html.LabelFor(m => m.Date, "Дата")
            @Html.EditorFor(m => m.Date)
        </p>
        <input type="submit" />
    }
</div>


