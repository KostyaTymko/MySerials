
@{
    ViewBag.Title = "CatalogForEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h3>Редактирование контента</h3>
    <table>
        <tr>
            <th><p>Название</p></th>
            <th><p>Описание</p></th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var b in ViewBag.Serials)
            {
            <tr>
                <td><a href="/Edit/SerialSeasonForEdit/@b.Id">@b.Serial_title</a></td>
                <td>@b.SerialDescription</td>
                @*<td><a href="/Edit/SerialSeasonForEdit/@b.Id">Сезоны</a></td>*@
                <td>/</td>
                <td><a href="/Edit/SerialEdit/@b.Id">Редактировать</a></td> 
                <td><a href="/Edit/SerialDelete/@b.Id">Удалить</a></td>                
            </tr>
        }
    </table>
    <p></p>
    <div><h4><a href="/Edit/SerialAdd/">Добавить сериал</a></h4></div>
</div>


